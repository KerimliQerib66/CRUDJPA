<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <class>entity.Categories</class>
        <class>entity.Customers</class>
        <class>entity.Employees</class>
        <class>entity.Orderdetails</class>
        <class>entity.Orders</class>
        <class>entity.Products</class>
        <class>entity.Shippers</class>
        <class>entity.Suppliers</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/northwind"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="12345678910"/>
        </properties>
    </persistence-unit>
</persistence>
